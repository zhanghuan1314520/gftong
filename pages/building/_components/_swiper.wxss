.preview-wrap {
    position: relative;
    height: 500rpx;
}

.preview-wrap .building-swiper-wrap {
    position: relative;
    width: 100%;
    height: 100%;
}

.preview-wrap .default-img {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.switch {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 40rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 30rpx;
    background-color: hsla(0,0%,100%,.85);
    color: #333;
    font-size: 22rpx;
    border-radius: 20rpx;
    z-index: 3;
}

.switch .active-bar,.switch .item {
    width: 80rpx;
    height: 40rpx;
    border-radius: 20rpx;
    line-height: 40rpx;
}

.switch .active-bar {
    position: absolute;
    top: 0;
    left: 0;
    background-color: #00b08d;
    transition: left .5s ease-in-out;
}

.switch .item {
    position: relative;
    background-color: transparent;
    text-align: center;
    z-index: 1;
    transition: color .5s ease-in-out;
}

.switch .item.active {
    color: #fff;
}

.building-swiper-wrap {
    position: relative;
}

.building-swiper-wrap .building-swiper {
    width: 100%;
    height: 500rpx;
}

.building-swiper-wrap .panorama::before,.building-swiper-wrap .planar_graph::before,.building-swiper-wrap .video::before,.building-swiper-wrap .vr::before {
    content: "";
    width: 128rpx;
    height: 128rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1;
}

.building-swiper-wrap .video::before {
    background-image: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/building/video.png);
    background-size: 100% 100%;
}

.building-swiper-wrap .vr::before {
    background-image: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/building/vr.png);
    background-size: 100% 100%;
}

.building-swiper-wrap .panorama::before {
    background-image: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/building/panorama.png);
    background-size: 100% 100%;
}

.building-swiper-wrap .planar_graph::before {
    background-image: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/building/planar_graph.png);
    background-size: 100% 100%;
}

.building-swiper-img {
    width: 100%;
    height: 500rpx;
}

.building-swiper-img .img,.building-swiper-img .min-img {
    transition: all .25s ease-in-out;
}

.building-swiper-img .img {
    width: 100%;
    height: 100%;
    opacity: 0;
}

.building-swiper-img .min-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.count,.view {
    position: absolute;
    bottom: 30rpx;
    display: -webkit-inline-box;
    display: -ms-inline-flexbox;
    display: -webkit-inline-flex;
    display: inline-flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    min-width: 88rpx;
    height: 40rpx;
    padding: 0 15rpx;
    color: #fff;
    border-radius: 20rpx;
    z-index: 1;
    opacity: .9;
    background-color: rgba(0,0,0,.5);
    font-size: 22rpx;
    text-align: center;
}

.view {
    left: 20rpx;
}

.view ._img {
    width: 31rpx;
    height: 20rpx;
    margin-right: 4rpx;
}

.count,.top-right {
    right: 20rpx;
}

.top-right {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: rgba(0,0,0,.4);
    box-shadow: 0 4rpx 4rpx 0 hsla(0,0%,100%,.1);
}

.top-right.share {
    top: 32rpx;
}

.top-right.compare {
    top: 132rpx;
}

.live-status {
    position: absolute;
    top: 160rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 159rpx;
    height: 159rpx;
}

.live-status .liveing {
    width: 100%;
    height: 100%;
    position: relative;
}

.live-status .liveing::after,.live-status .liveing::before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    border-radius: 50%;
    animation: liveing 2s linear infinite;
    z-index: 2;
}

.live-status .liveing::after {
    animation-delay: 1s;
}

.live-status .liveing-bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 3;
    background-image: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/building/live/liveing.png?v=1);
    background-size: 100% 100%;
}

.live-status .forcoming {
    background-image: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/building/live/forcoming.png?v=1);
    padding-top: 68rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    font-weight: 700;
    line-height: 30rpx;
}

.live-status .forcoming,.live-status .replay {
    width: 100%;
    height: 100%;
    background-size: 100% 100%;
}

.live-status .replay {
    background-image: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/building/live/replay.png?v=1);
}

@-webkit-keyframes liveing {
    0% {
        transform: scale(1);
        opacity: .5;
    }

    100% {
        transform: scale(1.5);
        opacity: 0;
    }
}

@keyframes liveing {
    0% {
        transform: scale(1);
        opacity: .5;
    }

    100% {
        transform: scale(1.5);
        opacity: 0;
    }
}