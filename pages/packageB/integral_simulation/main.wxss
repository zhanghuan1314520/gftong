.page {
    width: 100vw;
    overflow: hidden;
    background-image: -webkit-gradient(linear,left top,left bottom,from(#00adac),color-stop(96%,#029f83));
    background-image: linear-gradient(180deg,#00adac,#029f83 96%);
    position: relative;
    padding-top: 816rpx;
}

.main-bg {
    width: 742rpx;
    height: 806rpx;
    background: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/packageB/integral_simulation/index.png) no-repeat 50%;
    background-size: 742rpx 806rpx;
    position: absolute;
    top: 8rpx;
    left: 4rpx;
}

.page-tit {
    position: absolute;
    top: 80rpx;
    left: 0;
    right: 0;
    color: #fff;
    line-height: 84rpx;
    font-weight: 700;
    text-align: center;
    z-index: 2;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.page-tit text:nth-of-type(1) {
    font-size: 60rpx;
}

.page-tit text:nth-of-type(2) {
    font-size: 44rpx;
}

.bt-bg {
    width: 968rpx;
    height: 500rpx;
    background: url(https://cdn.vip-wifi.com/hzfangchan/version-img/1.14.25/packageB/integral_simulation/home_bt.png) no-repeat 50%;
    background-size: 968rpx 500rpx;
    position: fixed;
    left: -150rpx;
    bottom: -95rpx;
}

.tips {
    text-align: center;
    font-size: 20rpx;
    line-height: 28rpx;
    font-weight: 700;
    color: #006b6a;
}

.query-btn {
    width: 468rpx;
    height: 140rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    margin: 52rpx auto 0;
    position: relative;
    z-index: 6;
}

.query-btn ._img {
    width: 100%;
    height: 100%;
}