.loading {
    display: block;
    text-align: center;
}

.typing_loader,.white_typing_loader {
    position: relative;
    display: inline-block;
    left: -12px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
}

.typing_loader {
    animation: typing 1s linear infinite alternate;
}

.white_typing_loader {
    animation: while_typing 1s linear infinite alternate;
}

